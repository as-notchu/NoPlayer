             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MusicPlayer.App"
             xmlns:local="using:MusicPlayer"
             RequestedThemeVariant="Dark">
             <!-- Theme locked to "Dark" to prevent OS theme from affecting app appearance -->

